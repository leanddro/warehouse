<section id="warehouses" class="w-full">
  <div class="flex justify-between">
    <h2 class="text-3xl">Galpões</h2>
    <h2 class="text-mg"><%= link_to 'Cadastrar Galpão', new_warehouse_path %></h2>
  </div>

  <hr class="h-px my-8 bg-gray-500 border-0">
  <div class="flex flex-row flex-wrap">
    <% @warehouses.each do |w| %>
      <div class="w-4/12 bg-white border border-gray-200 rounded-lg shadow">
        <div class="p-5">
            <h3 class="mb-2 text-xl font-bold"><%= link_to w.name, w %></h3>
            <p class="mb-3 font-normal text-gray-700">
              Código: <%= w.code %>
            </p>
            <p class="mb-3 font-normal text-gray-700">
              Cidade: <%= w.city %>
            </p>
            <p class="mb-3 font-normal text-gray-700">
              Área: <%= w.area %> m²
            </p>
        </div>
      </div>
    <% end %>
  </div>
  <% if @warehouses.empty? %>
    <p class="mb-3 font-normal text-gray-700">
      Não existem galpões cadastrados
    </p>
  <% end %>
</section>
