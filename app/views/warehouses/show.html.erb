<div class="flex flex-col w-full  bg-white border border-gray-200 rounded-lg shadow">
  <div class="flex flex-col p-6">
    <h2 class="text-3xl font-bold">Galpão <%= @warehouse.code %></h2>
    <hr class="h-px my-8 bg-gray-500 border-0">
    <p class="mb-3 font-normal text-gray-700">
      Nome: <%= @warehouse.name %>
    </p>
    <p class="mb-3 font-normal text-gray-700">
      Cidade: <%= @warehouse.city %>
    </p>
    <p class="mb-3 font-normal text-gray-700">
      Área: <%= @warehouse.area %> m²
    </p>
    <p class="mb-3 font-normal text-gray-700">
      Endereço: <%= @warehouse.address %> CEP: <%= @warehouse.cep %>
    </p>
    <p class="mb-3 font-normal text-gray-800 text-lg">
      <%= @warehouse.description %>
    </p>
  </div>
  <hr class="h-px my-8 bg-gray-500 border-0">

  <section id="stock_products">
    <h2>Itens em Estoque</h2>
    <% @stocks.each_pair do |pm, quantity| %>
     <p class="mb-3 font-normal text-gray-700">
      <%= "#{quantity} x #{pm.sku}" %>
     </p>
    <% end %>
  </section>

  <div class="flex justify-end p-6">
    <div class="flex">
      <%= link_to 'Voltar', root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
      <%= link_to 'Editar', edit_warehouse_path(@warehouse.id), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
      <%= button_to 'Remover', warehouse_path(@warehouse.id), method: :delete, class:  'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded cursor-pointer'%>
    </div>
  </div>
</div>
