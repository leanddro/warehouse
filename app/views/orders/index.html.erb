<section class="w-full">
  <div class="flex justify-between">
    <h2 class="text-3xl">Pedidos</h2>
    <h2 class="text-mg"><%= link_to 'Cadastrar Novo', new_order_path %></h2>
  </div>

  <hr class="h-px my-8 bg-gray-500 border-0">
  <div class="flex flex-row flex-wrap">
    <% @orders.each do |order| %>
      <div class="w-4/12 bg-white border border-gray-200 rounded-lg shadow">
        <%= render order %>
      </div>
    <% end %>
  </div>
  <% if @orders.empty? %>
    <p class="mb-3 font-normal text-gray-700">
      Nenhum pedido cadastrado.
    </p>
  <% end %>

  <div class="flex justify-end p-6">
    <div class="flex">
      <%= link_to 'Voltar', root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer' %>
    </div>
  </div>
</section>
