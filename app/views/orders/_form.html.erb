<% if @order.errors.any? %>
  <ul class="w-full">
   <% @order.errors.full_messages.each do |msg| %>
      <li class="p-2 w-full rounded-md text-red-700 bg-red-300 border border-red-400 m-1">
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @order, class: 'w-full mt-4 grid gap-4 grid-cols-6' do |f|%>
  <div class="col-span-6">
    <%= f.label :warehouse_id %>
    <%= f.collection_select :warehouse_id, @warehouses, :id, :full_description, { prompt: false }, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-6">
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :corporate_name, { prompt: false }, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-6">
    <%= f.label :estimated_delivery_date %>
    <%= f.date_field :estimated_delivery_date, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-5 justify-end">
    <%= f.submit 'Gravar', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer'%>
  </div>
<% end %>
