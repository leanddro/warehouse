<% if @product_model.errors.any? %>
  <ul class="w-full">
   <% @product_model.errors.full_messages.each do |msg| %>
      <li class="p-2 w-full rounded-md text-red-700 bg-red-300 border border-red-400 m-1">
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @product_model, class: 'w-full mt-4 grid gap-4 grid-cols-6' do |f|%>
  <div class="col-span-4">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-2">
    <%= f.label :sku %>
    <%= f.text_field :sku, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-3">
    <%= f.label :width %>
    <%= f.number_field :width, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-3">
    <%= f.label :height %>
    <%= f.number_field :height, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-3">
    <%= f.label :depth %>
    <%= f.number_field :depth, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
    <div class="col-span-3">
    <%= f.label :weight %>
    <%= f.number_field :weight, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-6">
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :brand_name, { prompt: false }, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="col-span-5 justify-end">
    <%= f.submit 'Enviar', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer'%>
  </div>
<% end %>
