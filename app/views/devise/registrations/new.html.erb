<h2 class="text-3xl"><%= t ".sign_up" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, t(".name")%><br />
    <%= f.text_field :name, autofocus: true, class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t ".characters_minimum" %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'h-10 border mt-1 rounded px-4 w-full bg-gray-50' %>
  </div>

  <div class="actions mt-2">
    <%= f.submit t(".sign_up"), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer'%>
  </div>
<% end %>
<div class="mt-2">
  <%= render "devise/shared/links" %>
</div>

